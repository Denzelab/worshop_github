void assign_numbers_and_addresses(corewar_t *cw)
{
    int next_number = 1;

    for (int i = 0; i < cw->champ_count; i++) {
        if (cw->champs[i].number == 0) {
            cw->champs[i].number = next_number;
            next_number++;
        }
        if (cw->champs[i].load_address == -1) {
            cw->champs[i].load_address = (MEM_SIZE / cw->champ_count) * i;
        }
    }
}

int place_champion_in_arena(corewar_t *cw, champion_t *champ)
{
    int start = champ->load_address;

    for (int i = 0; i < champ->header.prog_size; i++)
        cw->arena[(start + i) % MEM_SIZE] = champ->code[i];
    return 0;
}